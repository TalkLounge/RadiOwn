{
	"manifest_version": 2,
	"name": "RadiOwn",
	"version": "1.0",
	"description": "RadiOwn",
	"icons": {
		"64": "./icons/RadiOwn-64x64.png",
		"32": "./icons/RadiOwn-32x32.png",
		"16": "./icons/RadiOwn-16x16.png"
	},
    "browser_action": {
      "default_popup": "./popup/index.html",
      "default_icon": "./icons/RadiOwn.png"
    },
    "permissions": [
		"storage",
        "unlimitedStorage"
    ],
	"content_security_policy": "script-src 'self' https://www.youtube.com/ https://s.ytimg.com; object-src 'self'; child-src https://www.youtube.com/ https://s.ytimg.com",
    "background": {
        "page": "./background/index.html"
    }
}